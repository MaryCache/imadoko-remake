FROM node:20-alpine

WORKDIR /app

# openapi.yamlをコピー（型定義生成用）
COPY openapi.yaml ../openapi.yaml

# 依存関係をコピーしてインストール
COPY imadoko_front/package.json imadoko_front/package-lock.json ./
RUN npm ci

# ソースコードをコピー
COPY imadoko_front/ ./

# 型定義を生成
RUN npm run generate:types

# ポート公開
EXPOSE 3000

# 開発サーバーを起動
CMD ["npm", "run", "dev"]
